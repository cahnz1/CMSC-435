CC = c++
#FLAGS = -Wall
FLAGS = 

#-----------------------------------------
#Optimization ----------------------------
OPT = -O2 -g

#-----------------------------------------
#-----------------------------------------

TARGETS = main
OBJECTS = main.o io.o

#-----------------------------------------
# 
INCS = -I/usr/include/eigen3 -I/usr/local/include/eigen3/
LIBS =

CCOPTS = $(OPT) $(FLAGS) $(INCS)  
LDOPTS = $(OPT) $(LIBS)

#-----------------------------------------
#-----------------------------------------

default: $(TARGETS) 

clean:
	/bin/rm -fv *.o $(TARGETS) 

#-----------------------------------------
#-----------------------------------------

main: $(OBJECTS)
	$(CC) $(LDOPTS) -o main $(OBJECTS)


#-----------------------------------------

.cpp.o:
	$(CC) $(CCOPTS) -c $< -o $@

#-----------------------------------------
#-----------------------------------------
